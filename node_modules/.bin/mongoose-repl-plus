#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  --harmony "$basedir/../repl-plus/lib/mongoose-repl-plus.js" "$@"
  ret=$?
else 
  node  --harmony "$basedir/../repl-plus/lib/mongoose-repl-plus.js" "$@"
  ret=$?
fi
exit $ret
